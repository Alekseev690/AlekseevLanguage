<Window x:Class="AlekseevLanguage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlekseevLanguage"
        mc:Ignorable="d"
        Title="Алексеев Лангуаге" Height="450" Width="800" FontFamily="Comic Sans MS" Icon="res/school_logo.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Background="#FFE7FABF" Grid.Row="0">
            <TextBlock Text="Алексеев Лангуаге" FontSize="30" Margin="15" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        </StackPanel>
        <Image Source="res/school_logo.png" HorizontalAlignment="Left"></Image>
        <Frame Grid.Row="1" Name="MainFrame" NavigationUIVisibility="Hidden" ContentRendered="MainFrame_ContentRendered"></Frame>
        <Button Content="Назад" Name="BackButton" HorizontalAlignment="Right" Click="BackButton_Click"></Button>
    </Grid>
</Window>
